{% layout 'layout.liquid' %} {% block content %}
<div id="homeMain">
  <div id="logoCont">
    <img id="homeImg" src="{{ home[0].logo }}" />
  </div>
  <p>___________</p>
  <div class="stats">
    <div id="openTrails">
      <p class="pHead">Runs Open</p>
      <p>
        {{ home[0].openDownHillTrails }}/{{ home[0].maxOpenDownHillTrails }}
      </p>
    </div>
    <div id="snowCon">
      <p class="pHead">Snow Condition</p>
      <p>{{ home[0].primarySurfaceCondition }}</p>
    </div>
    <div id="openLifts">
      <p class="pHead">Lifts Open</p>
      <p>{{ home[0].openDownHillLifts }}/{{ home[0].maxOpenDownHillLifts }}</p>
    </div>
  </div>
  <div class="stats">
    <div id="base">
      <p class="pHead">Base Min/Base Max</p>
      <p>{{ home[0].avgBaseDepthMin }}"/{{ home[0].avgBaseDepthMax }}"</p>
    </div>
    <div id="id">
      <p class="pHead">Skiable Acres</p>
      <p>{{ home[0].maxOpenDownHillAcres }}</p>
    </div>
    <div id="parks">
      <p class="pHead">Terrain Parks Open</p>
      <p>{{ home[0].terrainParkOpen }}</p>
    </div>
  </div>
</div>
<div id="bottomCards">
    <div class="homeCards">
        <img class="regionHomeImg" src="/assets/pngaaa.com-178935.png">
        <p>___________</p>
        <h6>Your Regions</h6>
    </div>
  {% for resort in resorts %}
  <div class="homeCards">
    <img src="{{ resort.logo }}" class="regionImg" />
    <p>___________</p>
    <h6>{{ resort.maxOpenDownHillAcres }}</h6>
    <h6>Skiable Acres</h6>
    <div class="lowerBut">
    <form id="logInForm" action="/resorts/update?_method=PUT" method="POST">
      <div id="resortSearch" style="display: none">
        <input
          type="text"
          name="resortId"
          value="{{ resort.resortId }}"
          class="form-control"
        />
      </div>
      <div class="userEnter">
        <input
          class="homeButImg"
          type="image"
          src="/assets/toppng.com-white-home-icon-no-background-1985x2016.png"
          value="Add to My Resorts"
          id="logInBut"
        />
      </div>
    </form>
    <form action="/resorts/home/?_method=DELETE" method="POST">
        <div id="resortSearch" style="display: none">
            <input
              type="text"
              name="resortId"
              value="{{ resort.resortId }}"
              class="form-control"
            />
          </div>
          <div class="userEnter">
            <input
              class="homeButImg"
              type="image"
              src="/assets/cancel-close-delete-exit-remove-stop-x-icon-326993.png"
              value="Add to My Resorts"
              id="logInBut"
            />
          </div>
      </form>
  </div>
  </div>
  {% endfor %}
</div>

{% endblock %}
