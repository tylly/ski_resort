{% layout 'layout.liquid' %} {% block content %}
<div id="homeMain">
  <div id="logoCont">
    <a href="/resorts/show/{{ home[0].resortId }}">
      <img id="homeImg" src="{{ home[0].logo }}" />
    </a>
  </div>
  <div class="homeTop">
  <h3>{{ homeWeather.data.main.temp }} °F</h3>
</div>
<div class="homeTop">
  <h3>{{homeWeather.data.weather[0].description}}</h3>
</div>
  <p>___________</p>
  <div class="stats">
    <div id="openTrails">
      <p class="pHead">Runs Open</p>
      <p>
        {{ homeData.openDownHillTrails }}/{{ homeData.maxOpenDownHillTrails }}
      </p>
    </div>
    <div id="snowCon">
      <p class="pHead">Snow Condition</p>
      <p>{{ homeData.primarySurfaceCondition }}</p>
    </div>
    <div id="openLifts">
      <p class="pHead">Lifts Open</p>
      <p>{{ homeData.openDownHillLifts }}/{{ homeData.maxOpenDownHillLifts }}</p>
    </div>
  </div>
  <div class="stats">
    <div id="base">
      <p class="pHead">Base Min/Base Max</p>
      <p>{{ homeData.avgBaseDepthMin }}"/{{ homeData.avgBaseDepthMax }}"</p>
    </div>
    <div id="id">
      <p class="pHead">Skiable Acres</p>
      <p>{{ homeData.maxOpenDownHillAcres }}</p>
    </div>
    <div id="parks">
      <p class="pHead">Terrain Parks Open</p>
      <p>{{ homeData.terrainParkOpen }}</p>
    </div>
  </div>
  <div id="homeDelete">
  <form action="/resorts/home/?_method=DELETE" method="POST">
    <div id="resortSearch" style="display: none">
      <input
        type="text"
        name="resortId"
        value="{{ home[0].resortId }}"
        class="form-control"
      />
    </div>
    <div class="userEnterHome">
      <input
        class="homeButImg"
        type="image"
        src="/assets/cancel-close-delete-exit-remove-stop-x-icon-326993.png"
        value="Add to My Resorts"
        id="logInBut"
      />
    </div>
  </form>
</div>
</div>
<div id="bottomCards">
  <div class="homeCards">
    <img class="regionHomeImg" src="/assets/pngaaa.com-178935.png" />
    <p>___________</p>
    <h6>Your Regions</h6>
    <ul class="regList">
      {% for userRegion in userRegions %}
      <a href="/regions/show/{{ userRegion.regionName }}" class="regLink">
        <li class="regItem">
          <img class="listImg" src="/assets/pngaaa.com-178935.png" />
          {{ userRegion.regionName }}
        </li>
      </a>
      {% endfor %}
    </ul>
  </div>
  {% for resort in resorts %}
 
  <div class="homeCards">
    <a href="/resorts/show/{{ resort.resortId }}">
      <img src="{{ resort.logo }}" class="regionImg" />
    </a>
    <p>___________</p>
    <h6>{{ resort.maxOpenDownHillAcres }}</h6>
    <h6>Skiable Acres</h6>
    <p class="weather">{{ cardWeather[forloop.index0].main.temp }} °F</p>
    <p class="weather">{{ cardWeather[forloop.index0].weather[0].description }}</p>
    <div class="lowerBut">
      <form id="logInForm" action="/resorts/update?_method=PUT" method="POST">
        <div id="resortSearch" style="display: none">
          <input
            type="text"
            name="resortId"
            value="{{ resort.resortId }}"
            class="form-control"
          />
        </div>
        <div class="userEnterHome">
          <input
            class="homeButImg"
            type="image"
            src="/assets/toppng.com-white-home-icon-no-background-1985x2016.png"
            value="Add to My Resorts"
            id="logInBut"
          />
        </div>
      </form>
      <form action="/resorts/home/?_method=DELETE" method="POST">
        <div id="resortSearch" style="display: none">
          <input
            type="text"
            name="resortId"
            value="{{ resort.resortId }}"
            class="form-control"
          />
        </div>
        <div class="userEnterHome">
          <input
            class="homeButImg"
            type="image"
            src="/assets/cancel-close-delete-exit-remove-stop-x-icon-326993.png"
            value="Add to My Resorts"
            id="logInBut"
          />
        </div>
      </form>
    </div>
  </div>
  {% endfor %}
</div>

{% endblock %}
