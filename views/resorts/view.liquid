{% layout 'layout.liquid' %} {% block content %}
<div id="viewMain">
  <div id="logoCont">
    <img id="viewImg" src="{{ resorts.logo }}" />
  </div>
  <div class="stats">
    <div id="openTrails">
      <p class="pHead">Runs Open</p>
      <p>
        {{ resorts.openDownHillTrails }}/{{ resorts.maxOpenDownHillTrails }}
      </p>
    </div>
    <div id="snowCon">
      <p class="pHead">Snow Condition</p>
      <p>{{ resorts.primarySurfaceCondition }}</p>
    </div>
    <div id="openLifts">
      <p class="pHead">Lifts Open</p>
      <p>{{ resorts.openDownHillLifts }}/{{ resorts.maxOpenDownHillLifts }}</p>
    </div>
  </div>
  <div class="stats">
    <div id="base">
      <p class="pHead">Base Min/Base Max</p>
      <p>{{ resorts.avgBaseDepthMin }}"/{{ resorts.avgBaseDepthMax }}"</p>
    </div>
    <div id="id">
      <p class="pHead">Resort ID</p>
      <p>{{ resorts.id }}</p>
    </div>
    <div id="parks">
      <p class="pHead">Terrain Parks Open</p>
      <p>{{ resorts.terrainParkOpen }}</p>
    </div>
  </div>
  <form id="logInForm" action="/resorts" method="POST">
    <div id="resortSearch" style="display:none">
        <input
          type="text"
          name="resortId"
          value="{{ resorts.id }}"
          class="form-control"
        />
      </div>
    <div class="userEnter">
      <input
        type="submit"
        value="Add to My Resorts"
        class="btn btn-success"
        id="logInBut"
      />
    </div>
  </form>
</div>

{% endblock %}
