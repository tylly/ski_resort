{% layout 'layout.liquid' %} {% block content %}
<div id="viewMain">
  <div id="logoCont">
    <img id="viewImg" src="{{ resorts.logo }}" />
  </div>
  <div class="homeTop">
    <h3>{{ homeWeather.data.main.temp }} Â°F</h3>
  </div>
  <div class="homeTop">
    <h3>{{homeWeather.data.weather[0].description}}</h3>
  </div>
  <p>___________</p>
  <div class="stats">
    <div id="openTrails">
      <p class="pHead">Runs Open</p>
      <p>
        {{ resorts.openDownHillTrails }}/{{ resorts.maxOpenDownHillTrails }}
      </p>
    </div>
    <div id="id">
      <p class="pHead">Skiable Acres</p>
      <p>{{ resorts.maxOpenDownHillAcres }}</p>
    </div>
    <div id="openLifts">
      <p class="pHead">Lifts Open</p>
      <p>{{ resorts.openDownHillLifts }}/{{ resorts.maxOpenDownHillLifts }}</p>
    </div>
  </div>
  <form id="logInForm" action="/resorts" method="POST">
    <div id="resortSearch" style="display:none">
        <input
          type="text"
          name="resortId"
          value="{{ resorts.id }}"
          class="form-control"
        />
      </div>
    <div class="userEnterr">
      <input
        type="submit"
        value="Add to My Resorts"
        class="btn btn-success"
        id="logInBut"
      />
    </div>
  </form>
</div>

{% endblock %}
