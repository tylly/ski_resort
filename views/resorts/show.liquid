{% layout 'layout.liquid' %} {% block content %}
<div id="viewMain">
  <div id="logoCont">
    <img id="viewImg" src="{{ resorts.logo }}" />
  </div>
  <div class="homeTop">
    <h3>{{ homeWeather.data.main.temp }} Â°F</h3>
  </div>
  <div class="homeTop">
    <h3>{{homeWeather.data.weather[0].description}}</h3>
  </div>
  <p>___________</p>
  <div class="stats">
    <div id="openTrails">
      <p class="pHead2">Runs Open</p>
      <p>
        {{ homeData.openDownHillTrails }}/{{ homeData.maxOpenDownHillTrails }}
      </p>
    </div>
    <div id="id">
      <p class="pHead2">Skiable Acres</p>
      <p>{{ homeData.maxOpenDownHillAcres }}</p>
    </div>
    <div id="openLifts">
      <p class="pHead2">Lifts Open</p>
      <p>{{ homeData.openDownHillLifts }}/{{ homeData.maxOpenDownHillLifts }}</p>
    </div>
  </div>
  <p>___________</p>
  <div class="stats">
    <div id="base">
      <p class="pHead2">Base Min/Base Max</p>
      <p>{{ homeData.avgBaseDepthMin }}"/{{ homeData.avgBaseDepthMax }}"</p>
    </div>
    <div id="snowCon">
      <p class="pHead2">Snow Condition</p>
      <p>{{ homeData.primarySurfaceCondition }}</p>
    </div>
    <div id="parks">
      <p class="pHead2">Terrain Parks Open</p>
      <p>{{ homeData.terrainParkOpen }}</p>
    </div>
  </div>
  <p>___________</p>
  <div class="stats">
    <div id="base">
      <p class="pHead2">Fresh Snow</p>
      <p>{{ homeData.newSnowMax }}"</p>
    </div>
    <div id="parks">
      <p class="pHead2">Hours</p>
      <p>M-F: {{ homeData.weekDay }} SAT-SUN: {{ homeData.weekendHours }}</p>
    </div>
    <div id="id">
      <p class="pHead2">Night Riding</p>
      <p>{{ homeData.nightSkiing }}"</p>
    </div>

  </div>
</div>

{% endblock %}